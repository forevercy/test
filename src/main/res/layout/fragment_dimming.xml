<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/second_pic"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/btn_dim_system_bars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dim system bars"/>

    <Button
        android:id="@+id/btn_cancel_dim_system_bars"
        android:layout_below="@id/btn_dim_system_bars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cancel dim system bars"/>
</RelativeLayout>