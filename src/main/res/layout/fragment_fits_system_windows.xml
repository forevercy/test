<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/second_pic"
        android:scaleType="centerCrop" />

    <com.cytmxk.test.systemwindows.FlowLayout
        android:id="@+id/flow_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:gravity="right"
        android:fitsSystemWindows="true"
        android:background="@android:color/holo_blue_light">
        <TextView
            style="@style/text_flag_01"
            android:text="Welcome" />

        <TextView
            style="@style/text_flag_01"
            android:text="IT工程师" />

        <TextView
            style="@style/text_flag_01"
            android:text="学习ing" />

        <TextView
            style="@style/text_flag_01"
            android:text="恋爱ing" />

        <TextView
            style="@style/text_flag_01"
            android:text="挣钱ing" />

        <TextView
            style="@style/text_flag_01"
            android:text="努力ing" />

        <TextView
            style="@style/text_flag_01"
            android:text="I thick i can" />
    </com.cytmxk.test.systemwindows.FlowLayout>

    <Button
        android:id="@+id/btn_hide_status_bar"
        android:layout_below="@id/flow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hide status bar"/>

    <Button
        android:id="@+id/btn_cancel_hide_status_bar"
        android:layout_below="@id/btn_hide_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cancel hide status bar"/>

    <Button
        android:id="@+id/btn_hide_navigation_bar"
        android:layout_below="@id/btn_cancel_hide_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hide navigation bar"/>

    <Button
        android:id="@+id/btn_cancel_hide_navigation_bar"
        android:layout_below="@id/btn_hide_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cancel hide navigation bar"/>
</RelativeLayout>